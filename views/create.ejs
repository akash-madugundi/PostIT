<%- include("header.ejs") %>

<style>
.intro{
    margin-left: 100px;
    margin-right: 100px;
    margin-top: 40px;
    padding-bottom: 15px;
    color: white;
}

form{
    display: flex;
    flex-direction: column;
    align-items: center;
}

label{
    font-weight: 600;
    color: white;
    font-size: 20px;
}

.input-box input{
    margin: 15px;
    margin-bottom: 30px;
    padding-left: 20px;
    width: 300px;
    height: 40px;
    border: none;
    border-radius: 20px;
    /* color: magenta ; */
}

.input-box2 textarea{
    margin: 15px;
    padding-left: 30px;
    padding-right: 30px;
    margin-bottom: 30px;
    font-size: 25px;
    text-align: center;
    width: 700px;
    height: 500px;
    border: none;
    border-radius: 40px;
    /* color: magenta ; */
}

.input-box2 textarea::placeholder{
    opacity: 0.3;
    padding-top: 200px;
}

button{
    background-color: #0d6efd;
    width: 20%;
    height: 50px;
    border-radius: 10px;
    border: none;
    color: white;
    font-size: 25px;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    cursor: pointer;
}

button:hover {
    background-color: #1565c0;
}

.btn{
    display: flex;
    justify-content: center;
    width: 100%;
    height: 100%;
    margin-bottom: 40px;
}
</style>


    <div class="intro">
        <h1>Create Post</h1>
    </div>
    <form action=<%= str %> method="POST">
        <label for="title">Title</label>
        <div class="input-box">
            <input type="text" name="title" placeholder='Title' required>
        </div>
        <label for="content">Content</label>
        <div class="input-box2">
            <textarea name="content" placeholder='Content'></textarea>
        </div>
        <div class="btn">
            <button type="submit">Publish</button>
        </div>
    </form>


<%- include("footer.ejs") %>